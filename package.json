{
  "name": "@charlietango/ui",
  "description": "Collection of shared UI elements for Charlie Tango projects",
  "version": "0.1.1",
  "author": "Charlie Tango",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/ui.git"
  },
  "keywords": [
    "emotion",
    "styled-system",
    "ui"
  ],
  "files": [
    "dist/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "dev": "run-s storybook",
    "dev:watch": "tsc --watch --noEmit false",
    "build": "run-s build:*",
    "build:tsc": "tsc --noEmit false",
    "build:copy": "node tools/build-copy",
    "now-build": "run-s build-storybook",
    "lint": "eslint . --ext js,ts,tsx",
    "storybook": "start-storybook -p 9000 -s public",
    "build-storybook": "build-storybook -s public -o build",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "version": "run-p build",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit true && lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,mdx}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branches": ["master", {"name": "beta", "prerelease": true}],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@charlietango/use-client-hydrated": "^1.8.1",
    "@charlietango/use-focus-trap": "^1.2.10",
    "@emotion/is-prop-valid": "^0.8.6",
    "@styled-system/css": "^5.1.4",
    "react-remove-scroll": "^2.2.0",
    "styled-system": "^5.1.4",
    "tslib": "^1.10.0"
  },
  "peerDependencies": {
    "@emotion/core": ">=10.0.0",
    "@emotion/styled": ">=10.0.0",
    "emotion-theming": ">=10.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@storybook/addon-actions": "^5.3.10",
    "@storybook/addon-docs": "^5.3.10",
    "@storybook/addon-links": "^5.3.10",
    "@storybook/addon-viewport": "^5.3.10",
    "@storybook/addons": "^5.3.10",
    "@storybook/preset-create-react-app": "^1.5.2",
    "@storybook/react": "^5.3.10",
    "@storybook/theming": "^5.3.10",
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^8.1.0",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-system": "^5.1.6",
    "@types/styled-system__css": "^5.0.4",
    "@types/styled-system__should-forward-prop": "^5.0.4",
    "emotion-theming": "^10.0.27",
    "globby": "^11.0.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1",
    "typescript": "~3.7.5"
  }
}
