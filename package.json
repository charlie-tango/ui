{
  "name": "@charlietango/ui",
  "description": "Collection of shared UI elements for Charlie Tango projects",
  "version": "0.1.0",
  "keywords": ["styled-components", "styled-system", "ui"],
  "scripts": {
    "dev": "run-s storybook",
    "build": "tsc -p tsconfig.prod.json --noEmit false",
    "now-build": "run-s build-storybook",
    "lint": "eslint . --ext js,ts,tsx",
    "storybook": "start-storybook -p 9000 -s public",
    "build-storybook": "build-storybook -s public",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "test": "react-scripts test"
  },
  "license": "MIT",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/charlie-tango/ui",
  "files": [
    "lib"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,mdx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@styled-system/css": "^5.1.4",
    "styled-system": "^5.1.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@storybook/addon-actions": "^5.3.0-rc.9",
    "@storybook/addon-docs": "^5.3.0-rc.9",
    "@storybook/addon-links": "^5.3.0-rc.9",
    "@storybook/addon-viewport": "^5.3.0-rc.9",
    "@storybook/addons": "^5.3.0-rc.9",
    "@storybook/preset-create-react-app": "^1.5.0",
    "@storybook/react": "^5.3.0-rc.9",
    "@storybook/theming": "^5.3.0-rc.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^8.0.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^13.1.4",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^4.4.1",
    "@types/styled-system": "^5.1.4",
    "@types/styled-system__css": "^5.0.4",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "styled-components": "^5.0.0-rc.3",
    "typescript": "~3.7.2"
  }
}
